<section class="Clientes">

  <div class="NavLinkIcon">
      <i class="material-icons">undo</i>
      <a href="/">Voltar</a>
  </div>

  <h1 class="SecondaryTitle">Clientes</h1>

  <%= form_with(url: clientes_path, local: true, method: :get) do |f| %>
    <div class="Row">
      <i class="IconeBusca material-icons">search</i>
      <input type="text" placeholder="Buscar por nome do cliente..." class="Input InputBusca" name="query" value="<%= params[:query] %>" />
    </div>
    <div class="Row">
      <small>Pressione ENTER para efetuar a pesquisa</small>
    </div>
  <% end %>

  <table class="Table u-marginSmallBottom">
    <thead>
      <tr>
        <th>Nome</th>
        <th class="Mobile">Celular</th>
        <th class="Mobile">Telefone</th>
        <th class="Mobile">E-mail</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @clientes.each do |cliente| %>
      <tr>
        <td><%= cliente.nome %></td>
        <td class="Mobile"><%= cliente.celular %></td>
        <td class="Mobile"><%= cliente.telefone %></td>
        <td class="Mobile"><%= cliente.email %></td>
        <td>
          <%= link_to cliente, class: "Button ButtonPrimary" do %>
            <i class="material-icons">remove_red_eye</i>
            <span class="Mobile">Visualizar</span>
          <% end %>
        </td>
        <td>
          <%= link_to edit_cliente_path(cliente), class: "Button ButtonSecondary" do %>
            <i class="material-icons">edit</i>
            <span class="Mobile">Editar</span>
          <% end %>
        </td>
        <td>
          <%= link_to cliente, method: :delete, data: { confirm: 'Tem certeza de que deseja excluir?' }, class: "Button ButtonDelete" do %>
            <i class="material-icons">delete</i>
            <span class="Mobile">Excluir</span>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'Adicionar cliente', new_cliente_path, class: "Button ButtonSave" %>

</section>
